generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  books Book[]

  @@unique([email])
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String?
  status          Status
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  evaluation      Int?
  date_conclusion DateTime?
}

enum Status {
  LIDO
  LENDO
  QUERO_LER
}
